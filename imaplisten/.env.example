# Required — IMAP connection
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=you@example.com
IMAP_PASS=your_password_or_app_password

# Optional — filtering (empty = match all)
# Comma-separated; subject must contain one of these (case-insensitive)
IMAP_SUBJECT_KEYWORDS=job,new job
# Comma-separated; sender must be one of these
IMAP_ALLOWED_SENDERS=services@yourdomain.com

# Optional — mailbox and tuning
IMAP_MAILBOX=INBOX
IMAP_DEDUPE_MAX=10000
IMAP_RETRY_MAX=5
IMAP_RETRY_DELAY_MS=5000
IMAP_DEBUG=0

# Optional — when set, POST each matched email to this URL (apmen-hook webhook)
WEBHOOK_URL=https://your-apmen-hook-server.com/api/webhook
